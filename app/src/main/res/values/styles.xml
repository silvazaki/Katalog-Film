<resources>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowBackground">@color/colorBG</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MyApp.MainButton" parent="android:TextAppearance">
        <item name="android:background">@drawable/bg_green_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextAppearance.MyApp.SecondButton" parent="TextAppearance.MyApp.MainButton">
        <item name="android:background">@drawable/bg_gray_btn</item>
        <item name="android:textColor">@color/colorTxt</item>
    </style>

</resources>
